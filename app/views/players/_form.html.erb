<%= form_with(model: player, local: true) do |form| %>
  <% if player.errors.any? %>
    <%= content_tag :div, class: "alert alert-primary", role: :alert do %>
      <ul class="list-group">
      <% player.errors.full_messages.each do |message| %>
        <li class="list-item"><%= message %></li>
      <% end %>
      </ul>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, required: true, type: "email", class: "form-control" %>
    <small id="emailHelp" class="form-text text-muted">We won't share with anyone.</small>
  </div>

  <div class="form-group">
    <%= form.label :donation_in_aud %>
    <%= form.number_field :donation, value: 0, class: "form-control" %>
    <small id="donationHelp" class="form-text text-muted">Don't worry, we're not collecting donations yet - just gauging interest. $0 is fine.</small>
  </div>

  <div class="form-group">
    <%= recaptcha_tags %>
  </div>

  <div class="actions">
    <%= form.submit "Register", class: "btn btn-primary" %>
  </div>
<% end %>
